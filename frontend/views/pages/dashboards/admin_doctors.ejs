<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Doctors</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="d-flex" id="wrapper">
        <%- include('../../partials/sidebar') %>

            <div id="page-content-wrapper" class="main-gradient-bg">
                <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                        <h2 class="fs-2 m-0 text-dark fw-bold">Manage Doctors</h2>
                    </div>
                </nav>

                <div class="container-fluid px-4">
                    <div class="row">
                        <div class="col-12">
                            <div class="dash-card p-4 shadow-sm bg-white rounded-4 table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="py-3 ps-3 rounded-start text-muted small text-uppercase fw-bold">
                                                Name</th>
                                            <th class="py-3 text-muted small text-uppercase fw-bold">Status</th>
                                            <th class="py-3 text-muted small text-uppercase fw-bold">Access</th>
                                            <th
                                                class="py-3 pe-3 rounded-end text-end text-muted small text-uppercase fw-bold">
                                                Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(doctors.length> 0) { %>
                                            <% doctors.forEach(doc=> { %>
                                                <tr>
                                                    <td class="ps-3 fw-bold text-dark">
                                                        <img src="<%= doc.profilePic %>" class="rounded-circle me-2"
                                                            width="40" height="40">
                                                        <%= doc.fullName %>
                                                    </td>
                                                    <td>
                                                        <span
                                                            class="badge <%= doc.verificationStatus === 'verified' ? 'bg-success' : 'bg-warning' %> bg-opacity-10 text-dark border">
                                                            <%= doc.verificationStatus %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span
                                                            class="badge <%= doc.isBlocked ? 'bg-danger' : 'bg-success' %>">
                                                            <%= doc.isBlocked ? 'Blocked' : 'Active' %>
                                                        </span>
                                                    </td>
                                                    <td class="text-end pe-3">
                                                        <form action="/admin/block" method="POST" class="d-inline">
                                                            <input type="hidden" name="userId" value="<%= doc._id %>">
                                                            <% if(doc.isBlocked) { %>
                                                                <button type="submit" name="blockStatus" value="false"
                                                                    class="btn btn-sm btn-outline-success rounded-pill px-3 me-1">
                                                                    <i class="fas fa-unlock small me-1"></i> Unblock
                                                                </button>
                                                                <% } else { %>
                                                                    <button type="submit" name="blockStatus"
                                                                        value="true"
                                                                        class="btn btn-sm btn-outline-danger rounded-pill px-3 me-1">
                                                                        <i class="fas fa-ban small me-1"></i> Block
                                                                    </button>
                                                                    <% } %>
                                                        </form>
                                                        <a href="/messages?to=<%= doc._id %>"
                                                            class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                                            <i class="fas fa-comment small me-1"></i> Message
                                                        </a>
                                                        <!-- Optional: Suspend/Remove (Mapped to Block or specific verify status) -->
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="4" class="text-center">No doctors found.</td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <%- include('../../partials/footer') %>

        <script>
            var el = document.getElementById("wrapper");
            var toggleButton = document.getElementById("menu-toggle");
            if (toggleButton) {
                toggleButton.onclick = function () {
                    el.classList.toggle("toggled");
                };
            }
        </script>
</body>

</html>