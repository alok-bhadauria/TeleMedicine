<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Platform Analytics</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <%- include('../../partials/sidebar') %>

            <div id="page-content-wrapper" class="main-gradient-bg">
                <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                        <h2 class="fs-2 m-0 text-dark fw-bold">Analytics & Insights</h2>
                    </div>
                </nav>

                <div class="container-fluid px-4">
                    <!-- Overview Cards -->
                    <div class="row g-4 mb-4">
                        <div class="col-md-4">
                            <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100 text-center">
                                <h6 class="text-muted text-uppercase fw-bold">Total Users</h6>
                                <h2 class="fw-bold mb-0">
                                    <%= stats.totalPatients + stats.totalDoctors %>
                                </h2>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100 text-center">
                                <h6 class="text-muted text-uppercase fw-bold">Doctors vs Patients</h6>
                                <h2 class="fw-bold mb-0">
                                    <%= stats.totalDoctors %> / <%= stats.totalPatients %>
                                </h2>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100 text-center">
                                <h6 class="text-muted text-uppercase fw-bold">Growth Rate</h6>
                                <h2 class="fw-bold text-success mb-0">+12% <small class="text-muted fs-6">this
                                        month</small></h2>
                            </div>
                        </div>
                    </div>

                    <!-- Charts -->
                    <div class="row g-4 mb-4">
                        <div class="col-lg-8">
                            <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100">
                                <h5 class="fw-bold text-muted mb-4">Platform Growth (6 Months)</h5>
                                <canvas id="growthChart" height="300"></canvas>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100">
                                <h5 class="fw-bold text-muted mb-4">User Distribution</h5>
                                <canvas id="roleChart" height="300"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4">
                        <div class="col-lg-12">
                            <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100">
                                <h5 class="fw-bold text-muted mb-4">Monthly Active Users Trend</h5>
                                <canvas id="activeChart" height="150"></canvas>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
    </div>

    <%- include('../../partials/footer') %>

        <script>
            var el = document.getElementById("wrapper");
            var toggleButton = document.getElementById("menu-toggle");
            if (toggleButton) {
                toggleButton.onclick = function () {
                    el.classList.toggle("toggled");
                };
            }

            const data = <% - analyticsData %>;

            // Growth Chart (Line)
            new Chart(document.getElementById('growthChart'), {
                type: 'line',
                data: {
                    labels: ['Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec', 'Jan'],
                    datasets: [{
                        label: 'Total Users',
                        data: data.growth,
                        borderColor: '#4f46e5',
                        backgroundColor: 'rgba(79, 70, 229, 0.1)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: { maintainAspectRatio: false }
            });

            // Role Chart (Doughnut)
            new Chart(document.getElementById('roleChart'), {
                type: 'doughnut',
                data: {
                    labels: ['Patients', 'Doctors'],
                    datasets: [{
                        data: data.roles,
                        backgroundColor: ['#fbbf24', '#3b82f6'],
                        borderWidth: 0
                    }]
                },
                options: { maintainAspectRatio: false, cutout: '70%' }
            });

            // Active Chart (Bar)
            new Chart(document.getElementById('activeChart'), {
                type: 'bar',
                data: {
                    labels: ['Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec', 'Jan'],
                    datasets: [{
                        label: 'Active Users',
                        data: data.monthlyActive,
                        backgroundColor: '#10b981',
                        borderRadius: 5
                    }]
                },
                options: { maintainAspectRatio: false }
            });
        </script>
</body>

</html>