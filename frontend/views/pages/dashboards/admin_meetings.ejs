<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meeting Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="d-flex" id="wrapper">
        <%- include('../../partials/sidebar') %>

            <div id="page-content-wrapper" class="main-gradient-bg">
                <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                    <div class="d-flex align-items-center">
                        <button id="menu-toggle"
                            class="btn btn-light bg-white rounded-circle shadow-sm me-3 d-flex align-items-center justify-content-center"
                            style="width: 45px; height: 45px;">
                            <i class="fas fa-align-left primary-text fs-5"></i>
                        </button>
                        <h2 class="fs-2 m-0 text-dark fw-bold">Meeting Requests</h2>
                    </div>
                </nav>

                <div class="container-fluid px-4">
                    <!-- Pending Requests -->
                    <h5 class="fw-bold text-dark mb-3">Pending Requests</h5>
                    <div class="row mb-5">
                        <div class="col-12">
                            <div class="dash-card p-4 shadow-sm bg-white rounded-4 table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="py-3 ps-3 rounded-start text-muted small text-uppercase fw-bold">
                                                Doctor Name</th>
                                            <th class="py-3 text-muted small text-uppercase fw-bold">Requested Time</th>
                                            <th class="py-3 text-muted small text-uppercase fw-bold">Purpose</th>
                                            <th
                                                class="py-3 pe-3 rounded-end text-end text-muted small text-uppercase fw-bold">
                                                Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(pendingRequests && pendingRequests.length> 0) { %>
                                            <% pendingRequests.forEach(req=> { %>
                                                <tr>
                                                    <td class="ps-3 fw-bold text-dark">
                                                        <div class="d-flex align-items-center">
                                                            <img src="<%= req.doctorId.profilePic %>"
                                                                class="rounded-circle me-2" width="40" height="40"
                                                                onerror="this.src='/images/default-profile.png'">
                                                            <%= req.doctorId.fullName %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex flex-column">
                                                            <span class="fw-bold text-dark">
                                                                <%= new Date(req.date).toLocaleDateString() %>
                                                            </span>
                                                            <span class="small text-muted">
                                                                <%= req.timeSlot %>
                                                            </span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="text-muted small text-wrap"
                                                            style="max-width: 200px;">
                                                            <%= req.symptoms %>
                                                        </span>
                                                    </td>
                                                    <td class="text-end pe-3">
                                                        <form action="/admin/meeting-action" method="POST"
                                                            class="d-inline">
                                                            <input type="hidden" name="appointmentId"
                                                                value="<%= req._id %>">
                                                            <button type="submit" name="action" value="approve"
                                                                class="btn btn-sm btn-success rounded-pill px-3 me-1">
                                                                <i class="fas fa-check small me-1"></i> Approve
                                                            </button>
                                                            <button type="submit" name="action" value="reject"
                                                                class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                                                <i class="fas fa-times small me-1"></i> Decline
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="4" class="text-center py-5">
                                                                <i
                                                                    class="fas fa-inbox fs-1 text-muted opacity-25 mb-3"></i>
                                                                <p class="text-muted fw-bold mb-0">No pending requests
                                                                </p>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Upcoming Meetings -->
                    <h5 class="fw-bold text-dark mb-3">Upcoming Meetings</h5>
                    <div class="row">
                        <div class="col-12">
                            <div class="dash-card p-4 shadow-sm bg-white rounded-4 table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="py-3 ps-3 rounded-start text-muted small text-uppercase fw-bold">
                                                Doctor</th>
                                            <th class="py-3 text-muted small text-uppercase fw-bold">Schedule</th>
                                            <th class="py-3 text-muted small text-uppercase fw-bold">Details</th>
                                            <th
                                                class="py-3 pe-3 rounded-end text-end text-muted small text-uppercase fw-bold">
                                                Join</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(upcomingMeetings && upcomingMeetings.length> 0) { %>
                                            <% upcomingMeetings.forEach(mtg=> { %>
                                                <tr>
                                                    <td class="ps-3 fw-bold text-dark">
                                                        <div class="d-flex align-items-center">
                                                            <img src="<%= mtg.doctorId.profilePic %>"
                                                                class="rounded-circle me-2" width="40" height="40"
                                                                onerror="this.src='/images/default-profile.png'">
                                                            <%= mtg.doctorId.fullName %>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex flex-column">
                                                            <span class="fw-bold text-dark">
                                                                <%= new Date(mtg.date).toLocaleDateString() %>
                                                            </span>
                                                            <span class="small text-muted">
                                                                <%= mtg.timeSlot %>
                                                            </span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="text-muted small">
                                                            <%= mtg.symptoms %>
                                                        </span>
                                                    </td>
                                                    <td class="text-end pe-3">
                                                        <a href="/video-call/<%= mtg._id %>"
                                                            class="btn btn-warning text-dark fw-bold rounded-pill px-4 shadow-sm btn-animated">
                                                            <i class="fas fa-video me-2"></i>Join
                                                        </a>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="4" class="text-center py-5">
                                                                <p class="text-muted fw-bold mb-0">No upcoming meetings
                                                                </p>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <%- include('../../partials/footer') %>

        <script>
            var el = document.getElementById("wrapper");
            var toggleButton = document.getElementById("menu-toggle");
            if (toggleButton) {
                toggleButton.onclick = function () {
                    el.classList.toggle("toggled");
                };
            }
        </script>
</body>

</html>