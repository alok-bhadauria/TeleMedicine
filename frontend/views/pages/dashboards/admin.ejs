<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <% if (title && title.indexOf('MediConnect')===-1) { %>MediConnect | <%= title %>
                <% } else { %>
                    <%= title %>
                        <% } %>
    </title>
    <link rel="icon" type="image/png" href="/favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <%- include('../../partials/sidebar') %>

            <div id="page-content-wrapper" class="main-gradient-bg">
                <%- include('../../partials/top_utilities') %>
                    <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                        <div class="d-flex align-items-center justify-content-between w-100">
                            <div class="d-flex align-items-center">
                                <button id="menu-toggle"
                                    class="btn btn-light bg-white rounded-circle shadow-sm me-3 d-flex align-items-center justify-content-center"
                                    style="width: 45px; height: 45px;">
                                    <i class="fas fa-align-left primary-text fs-5"></i>
                                </button>
                                <h2 class="fs-2 m-0 text-dark fw-bold">Admin Dashboard</h2>
                            </div>
                        </div>
                    </nav>

                    <div class="container-fluid px-4">
                        <!-- Search Bar -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <form action="/admin/search" method="GET"
                                    class="d-flex shadow-sm rounded-pill bg-white overflow-hidden">
                                    <input class="form-control border-0 px-4 py-3" type="search" name="query"
                                        placeholder="Search Doctor or Patient by Name or ID..." aria-label="Search">
                                    <button class="btn btn-primary px-4 rounded-pill m-1" type="submit"><i
                                            class="fas fa-search"></i></button>
                                </form>
                            </div>
                        </div>

                        <!-- Welcome Banner -->
                        <div class="p-5 mb-4 rounded-4 shadow-sm text-white position-relative overflow-hidden"
                            style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);">
                            <div class="position-relative z-1">
                                <h1 class="display-5 fw-bold mb-2">System Administration</h1>
                                <p class="lead mb-0 opacity-75">Overview & Management Console</p>
                            </div>
                            <div class="position-absolute top-0 end-0 h-100 d-none d-md-block opacity-25"
                                style="width: 300px;">
                                <i class="fas fa-cogs" style="font-size: 15rem; transform: translate(50px, -20px);"></i>
                            </div>
                        </div>

                        <!-- Stats Cards -->
                        <div class="row g-4 mb-4">
                            <div class="col-md-4">
                                <div
                                    class="dash-card p-4 d-flex justify-content-between align-items-center bg-white shadow-sm rounded-4 h-100">
                                    <div>
                                        <p class="text-muted text-uppercase fw-bold small mb-1">Total Doctors</p>
                                        <h3 class="fw-bold mb-0 text-dark">
                                            <%= stats.totalDoctors %>
                                        </h3>
                                    </div>
                                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                                        <i class="fas fa-user-md fs-3"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div
                                    class="dash-card p-4 d-flex justify-content-between align-items-center bg-white shadow-sm rounded-4 h-100">
                                    <div>
                                        <p class="text-muted text-uppercase fw-bold small mb-1">Total Patients</p>
                                        <h3 class="fw-bold mb-0 text-dark">
                                            <%= stats.totalPatients %>
                                        </h3>
                                    </div>
                                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                                        <i class="fas fa-users fs-3"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div
                                    class="dash-card p-4 d-flex justify-content-between align-items-center bg-white shadow-sm rounded-4 h-100">
                                    <div>
                                        <p class="text-muted text-uppercase fw-bold small mb-1">Pending Verifications
                                        </p>
                                        <h3 class="fw-bold mb-0 text-dark">
                                            <%= stats.pendingCount %>
                                        </h3>
                                    </div>
                                    <div class="bg-danger bg-opacity-10 p-3 rounded-circle text-danger">
                                        <i class="fas fa-user-shield fs-3"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Analytics Charts Section -->
                        <div class="row g-4 mb-4">
                            <div class="col-lg-4">
                                <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100">
                                    <h5 class="fw-bold text-muted mb-4 text-center">User Distribution</h5>
                                    <div style="height: 300px; position: relative;">
                                        <div id="userChart"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100">
                                    <h5 class="fw-bold text-muted mb-4 text-center">Appointment Status</h5>
                                    <div style="height: 300px; position: relative;">
                                        <div id="appointmentChart"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100">
                                    <h5 class="fw-bold text-muted mb-4 text-center">System Activity</h5>
                                    <div style="height: 300px; position: relative;">
                                        <div id="activityChart"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Doctor Verifications Table -->
                        <h4 class="fw-bold text-dark mb-3">Pending Doctor Verifications</h4>
                        <div class="row">
                            <div class="col-12">
                                <div class="dash-card p-4 shadow-sm bg-white rounded-4 table-responsive">
                                    <table class="table table-hover align-middle mb-0">
                                        <thead class="bg-light">
                                            <tr>
                                                <th
                                                    class="py-3 ps-3 rounded-start text-muted small text-uppercase fw-bold">
                                                    Doctor Name</th>
                                                <th class="py-3 text-muted small text-uppercase fw-bold">Qualification
                                                </th>
                                                <th class="py-3 text-muted small text-uppercase fw-bold">Speciality</th>
                                                <th class="py-3 text-center text-muted small text-uppercase fw-bold">
                                                    Status
                                                </th>
                                                <th
                                                    class="py-3 pe-3 rounded-end text-end text-muted small text-uppercase fw-bold">
                                                    Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(pendingDoctors.length> 0) { %>
                                                <% pendingDoctors.forEach(doc=> { %>
                                                    <tr>
                                                        <td class="ps-3 fw-bold text-dark">
                                                            <div class="d-flex align-items-center"
                                                                style="cursor: pointer;"
                                                                data-doctor="<%= JSON.stringify(doc) %>"
                                                                onclick="showDoctorDetails(this.dataset.doctor)">
                                                                <img src="<%= doc.profilePic %>"
                                                                    class="rounded-circle me-2" width="40" height="40"
                                                                    onerror="this.onerror=null;this.src='/images/doctor-default.png'">
                                                                <span class="text-primary text-decoration-underline">
                                                                    <%= doc.fullName %>
                                                                </span>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <%= doc.qualification %>
                                                        </td>
                                                        <td>
                                                            <span class="badge bg-light text-dark border">
                                                                <%= doc.speciality %>
                                                            </span>
                                                        </td>
                                                        <td class="text-center">
                                                            <span
                                                                class="badge bg-warning bg-opacity-10 text-warning px-3 py-2 rounded-pill">
                                                                <%= doc.verificationStatus %>
                                                            </span>
                                                        </td>
                                                        <td class="text-end pe-3">
                                                            <form action="/admin/verify" method="POST" class="d-inline">
                                                                <input type="hidden" name="doctorId"
                                                                    value="<%= doc._id %>">
                                                                <button type="submit" name="action" value="approve"
                                                                    class="btn btn-sm btn-success rounded-pill px-3 me-1">
                                                                    <i class="fas fa-check small me-1"></i> Approve
                                                                </button>
                                                                <button type="submit" name="action" value="reject"
                                                                    class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                                                    <i class="fas fa-times small me-1"></i> Reject
                                                                </button>
                                                            </form>

                                                            <!-- Use existing Message System -->
                                                            <a href="/messages?to=<%= doc._id %>"
                                                                class="btn btn-sm btn-outline-primary rounded-pill px-3 ms-1">
                                                                <i class="fas fa-envelope small me-1"></i> Msg
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="5" class="text-center py-5 text-muted">
                                                                    <div class="d-flex flex-column align-items-center">
                                                                        <i
                                                                            class="fas fa-clipboard-check fs-1 mb-3 opacity-25"></i>
                                                                        <p class="mb-0">No pending verifications</p>
                                                                        <small class="opacity-75">All doctors are
                                                                            verified.</small>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
            </div>
    </div>

    <%- include('../../partials/doctor_details_modal') %>

        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/main.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>

        <script>
            // Toggle Sidebar
            var el = document.getElementById("wrapper");
            var toggleButton = document.getElementById("menu-toggle");
            if (toggleButton) {
                toggleButton.onclick = function () {
                    el.classList.toggle("toggled");
                };
            }

            // Charts Initialization with Dynamic Theme Support
            document.addEventListener('DOMContentLoaded', async () => {
                let userChart, appointmentChart, activityChart;
                let chartData = null;

                // 1. Fetch Data Once
                try {
                    const res = await fetch('/admin/chart-data');
                    if (!res.ok) throw new Error('Failed to fetch data');
                    chartData = await res.json();
                } catch (err) {
                    console.error("Error loading charts:", err);
                    return;
                }

                // 2. Render Function
                const renderCharts = () => {
                    const isDark = document.documentElement.getAttribute('data-bs-theme') === 'dark';

                    // Colors based on theme
                    // Light: Text #64748b (slate-500), Dark: Text #cbd5e1 (slate-300)
                    const textColor = isDark ? '#cbd5e1' : '#64748b';
                    const gridColor = isDark ? '#334155' : '#e2e8f0';

                    const baseColors = {
                        primary: '#6366f1',
                        secondary: '#ec4899',
                        success: '#10b981',
                        warning: '#f59e0b',
                        info: '#3b82f6'
                    };

                    // Common Options
                    const commonOptions = {
                        chart: {
                            foreColor: textColor,
                            fontFamily: 'inherit',
                            toolbar: { show: false },
                            animations: { enabled: true }
                        },
                        grid: { borderColor: gridColor },
                        dataLabels: { enabled: false },
                        legend: { position: 'bottom', labels: { colors: textColor } },
                        tooltip: { theme: isDark ? 'dark' : 'light' }
                    };

                    // --- User Chart ---
                    if (userChart) userChart.destroy();
                    const userOptions = {
                        ...commonOptions,
                        series: chartData.users.data,
                        labels: chartData.users.labels,
                        chart: { type: 'donut', height: 300, ...commonOptions.chart },
                        colors: [baseColors.primary, baseColors.secondary],
                        plotOptions: {
                            pie: {
                                donut: {
                                    labels: {
                                        show: true,
                                        total: {
                                            show: true,
                                            label: 'Total Users',
                                            color: textColor
                                        },
                                        value: { color: textColor }
                                    }
                                }
                            }
                        }
                    };
                    userChart = new ApexCharts(document.querySelector("#userChart"), userOptions);
                    userChart.render();

                    // --- Appointment Chart ---
                    if (appointmentChart) appointmentChart.destroy();
                    const appOptions = {
                        ...commonOptions,
                        series: chartData.appointments.data,
                        labels: chartData.appointments.labels,
                        chart: { type: 'donut', height: 300, ...commonOptions.chart },
                        colors: [baseColors.warning, baseColors.success, '#ef4444'],
                        plotOptions: {
                            pie: {
                                donut: {
                                    labels: {
                                        show: true,
                                        total: {
                                            show: true,
                                            label: 'Appointments',
                                            color: textColor
                                        },
                                        value: { color: textColor }
                                    }
                                }
                            }
                        }
                    };
                    appointmentChart = new ApexCharts(document.querySelector("#appointmentChart"), appOptions);
                    appointmentChart.render();

                    // --- Activity Chart ---
                    if (activityChart) activityChart.destroy();
                    const activityOptions = {
                        ...commonOptions,
                        series: [{
                            name: 'Count',
                            data: chartData.activity.data
                        }],
                        chart: { type: 'bar', height: 300, ...commonOptions.chart },
                        colors: [baseColors.info],
                        plotOptions: {
                            bar: {
                                borderRadius: 4,
                                horizontal: false,
                                columnWidth: '40%'
                            }
                        },
                        xaxis: {
                            categories: chartData.activity.labels,
                            labels: { style: { colors: textColor } },
                            axisBorder: { color: gridColor },
                            axisTicks: { color: gridColor }
                        },
                        yaxis: {
                            labels: { style: { colors: textColor } }
                        }
                    };
                    activityChart = new ApexCharts(document.querySelector("#activityChart"), activityOptions);
                    activityChart.render();
                };

                // Initial Render
                renderCharts();

                // 3. Watch for Theme Changes
                const observer = new MutationObserver((mutations) => {
                    mutations.forEach((mutation) => {
                        if (mutation.type === 'attributes' && mutation.attributeName === 'data-bs-theme') {
                            renderCharts();
                        }
                    });
                });

                observer.observe(document.documentElement, {
                    attributes: true,
                    attributeFilter: ['data-bs-theme']
                });
            });
        </script>
</body>

</html>