<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="d-flex" id="wrapper">
        <%- include('../../partials/sidebar') %>

            <div id="page-content-wrapper" class="main-gradient-bg">
                <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                        <h2 class="fs-2 m-0 text-dark fw-bold">Dashboard</h2>
                    </div>
                </nav>

                <div class="container-fluid px-4">
                    <!-- Welcome Banner -->
                    <div class="p-5 mb-4 rounded-4 shadow-sm text-white position-relative overflow-hidden"
                        style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);">
                        <div class="position-relative z-1">
                            <h1 class="display-5 fw-bold mb-2">Welcome back, Dr. <%= user.fullName.split(' ')[0] %>!</h1>
                        <p class="lead mb-0 opacity-75">Member ID: <%= user._id %></p>
                    </div>
                     <div class="position-absolute top-0 end-0 h-100 d-none d-md-block opacity-25" style="width: 300px;">
                        <i class="fas fa-user-md" style="font-size: 15rem; transform: translate(50px, -20px);"></i>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="row g-4 mb-4">
                    <div class="col-md-4">
                        <div class="dash-card p-4 d-flex justify-content-between align-items-center bg-white shadow-sm rounded-4 h-100">
                            <div>
                                <p class="text-muted text-uppercase fw-bold small mb-1">Pending Requests</p>
                                <h3 class="fw-bold mb-0 text-dark"><%= stats.pendingRequestsCount %></h3>
                            </div>
                            <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                                <i class="fas fa-user-clock fs-3"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="dash-card p-4 d-flex justify-content-between align-items-center bg-white shadow-sm rounded-4 h-100">
                             <div>
                                <p class="text-muted text-uppercase fw-bold small mb-1">Today' s Appointments</p>
                                    <h3 class="fw-bold mb-0 text-dark">
                                        <%= stats.todaysAppointmentsCount %>
                                    </h3>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                            <i class="fas fa-calendar-check fs-3"></i>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div
                        class="dash-card p-4 d-flex justify-content-between align-items-center bg-white shadow-sm rounded-4 h-100">
                        <div>
                            <p class="text-muted text-uppercase fw-bold small mb-1">Total Patients</p>
                            <h3 class="fw-bold mb-0 text-dark">
                                <%= stats.totalPatientsCount %>
                            </h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                            <i class="fas fa-users fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Appointment Requests -->
            <h4 class="fw-bold text-dark mb-3">Recent Appointment Requests</h4>
            <div class="row">
                <div class="col-12">
                    <div class="dash-card p-4 shadow-sm bg-white rounded-4 table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="py-3 ps-3 rounded-start text-muted small text-uppercase fw-bold">Patient
                                        Name</th>
                                    <th class="py-3 text-muted small text-uppercase fw-bold">Date & Time</th>
                                    <th class="py-3 text-muted small text-uppercase fw-bold">Symptoms</th>
                                    <th class="py-3 pe-3 rounded-end text-end text-muted small text-uppercase fw-bold">
                                        Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(recentRequests && recentRequests.length> 0) { %>
                                    <% recentRequests.forEach(req=> { %>
                                        <tr>
                                            <td class="ps-3 fw-bold text-dark">
                                                <%= req.patientId ? req.patientId.fullName : 'Unknown' %>
                                            </td>
                                            <td>
                                                <div class="small fw-bold">
                                                    <%= new Date(req.date).toLocaleDateString() %>
                                                </div>
                                                <small class="text-muted">
                                                    <%= req.timeSlot %>
                                                </small>
                                            </td>
                                            <td>
                                                <span class="d-inline-block text-truncate" style="max-width: 150px;">
                                                    <%= req.symptoms %>
                                                </span>
                                                <% if(req.sharedReports && req.sharedReports.length> 0) { %>
                                                    <div class="mt-1">
                                                        <% req.sharedReports.forEach(function(rep) { %>
                                                            <a href="<%= rep.fileUrl %>" target="_blank"
                                                                class="badge bg-light text-primary border text-decoration-none me-1"
                                                                title="<%= rep.title %>">
                                                                <i class="fas fa-paperclip"></i>
                                                            </a>
                                                            <% }) %>
                                                    </div>
                                                    <% } %>
                                            </td>
                                            <td class="text-end pe-3">
                                                <form action="/appointments/<%= req._id %>/update" method="POST"
                                                    class="d-inline">
                                                    <input type="hidden" name="meetingLink"
                                                        value="https://meet.jit.si/TeleM_<%= req._id %>">
                                                    <button type="submit" name="status" value="confirmed"
                                                        class="btn btn-sm btn-success rounded-pill px-3 me-1">
                                                        <i class="fas fa-check small me-1"></i> Accept
                                                    </button>
                                                    <button type="submit" name="status" value="cancelled"
                                                        class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                                        <i class="fas fa-times small me-1"></i> Reject
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="4" class="text-center py-5 text-muted">
                                                        <div class="d-flex flex-column align-items-center">
                                                            <i class="fas fa-calendar-times fs-1 mb-3 opacity-25"></i>
                                                            <p class="mb-0">No pending appointment requests</p>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

    </div>
    </div>
    </div>

    <%- include('../../partials/footer') %>

        <script>
            var el = document.getElementById("wrapper");
            var toggleButton = document.getElementById("menu-toggle");
            if (toggleButton) {
                toggleButton.onclick = function () {
                    el.classList.toggle("toggled");
                };
            }
        </script>
</body>

</html>