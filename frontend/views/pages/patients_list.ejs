<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Patients</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="d-flex" id="wrapper">
        <%- include('../partials/sidebar') %>

            <div id="page-content-wrapper" class="main-gradient-bg">
                <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                        <h2 class="fs-2 m-0 text-dark fw-bold">My Patients</h2>
                    </div>
                </nav>

                <div class="container-fluid px-4 mb-5">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="dash-card p-4 shadow-sm bg-white rounded-4 table-responsive h-100">
                                <% if(patients.length> 0) { %>
                                    <table class="table table-hover align-middle mb-0">
                                        <thead class="bg-light">
                                            <tr>
                                                <th
                                                    class="py-3 ps-3 rounded-start text-muted small text-uppercase fw-bold">
                                                    Name</th>
                                                <th class="py-3 text-muted small text-uppercase fw-bold">Contact</th>
                                                <th class="py-3 text-muted small text-uppercase fw-bold">Gender</th>
                                                <th
                                                    class="py-3 pe-3 rounded-end text-end text-muted small text-uppercase fw-bold">
                                                    Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% patients.forEach(p=> { %>
                                                <tr>
                                                    <td class="ps-3 fw-bold text-dark">
                                                        <img src="<%= p.profilePic || '/images/default-profile.png' %>"
                                                            class="rounded-circle me-3 shadow-sm" width="40" height="40"
                                                            style="object-fit:cover;">
                                                        <%= p.fullName %>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex flex-column">
                                                            <span class="small text-dark fw-bold"><i
                                                                    class="fas fa-envelope text-muted me-2"></i>
                                                                <%= p.email %>
                                                            </span>
                                                            <span class="small text-muted"><i
                                                                    class="fas fa-phone-alt text-muted me-2"></i>
                                                                <%= p.mobileNumber || 'N/A' %>
                                                            </span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-light text-dark border">
                                                            <%= p.gender || 'Not Specified' %>
                                                        </span>
                                                    </td>
                                                    <td class="text-end pe-3">
                                                        <a href="/messages?userId=<%= p._id %>"
                                                            class="btn btn-sm btn-outline-primary rounded-pill px-3 me-2">
                                                            <i class="fas fa-comment-medical me-1"></i> Message
                                                        </a>
                                                        <button type="button"
                                                            class="btn btn-sm btn-outline-success rounded-pill px-3"
                                                            data-bs-toggle="modal" data-bs-target="#prescriptionModal"
                                                            data-patient-id="<%= p._id %>"
                                                            data-patient-name="<%= p.fullName %>"
                                                            data-appointment-id="<%= p.latestAppointmentId %>">
                                                            <i class="fas fa-file-prescription me-1"></i> Prescribe
                                                        </button>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                    <% } else { %>
                                        <div class="text-center py-5">
                                            <i class="fas fa-users-slash fs-1 text-muted opacity-25 mb-3"></i>
                                            <p class="text-muted fw-bold">No patients found</p>
                                            <small class="text-muted opacity-75">Patients who book appointments with you
                                                will appear here.</small>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>

    <!-- Prescription Modal -->
    <div class="modal fade" id="prescriptionModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-bold"><i class="fas fa-file-prescription me-2"></i>Write Prescription</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
                </div>
                <form action="/prescriptions/add" method="POST">
                    <div class="modal-body p-4">
                        <input type="hidden" name="patientId" id="presc_patientId">
                        <input type="hidden" name="appointmentId" id="presc_appointmentId">

                        <div class="mb-3">
                            <label class="form-label text-muted small fw-bold">Patient Name</label>
                            <input type="text" class="form-control bg-light" id="presc_patientName" readonly>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted small fw-bold">Prescription Details</label>
                            <textarea class="form-control" name="advice" rows="6"
                                placeholder="Write medicines, dosage, and instructions here..." required
                                style="resize: none;"></textarea>
                            <div class="form-text">Enter the full prescription in free text format.</div>
                        </div>
                    </div>
                    <div class="modal-footer border-0 px-4 pb-4">
                        <button type="button" class="btn btn-light rounded-pill px-4"
                            data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary rounded-pill px-4">Send Prescription</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

        <script>
            // Handle Prescription Modal Data
            var prescriptionModal = document.getElementById('prescriptionModal');
            if (prescriptionModal) {
                prescriptionModal.addEventListener('show.bs.modal', function (event) {
                    var button = event.relatedTarget;
                    var patientId = button.getAttribute('data-patient-id');
                    var patientName = button.getAttribute('data-patient-name');
                    var appointmentId = button.getAttribute('data-appointment-id');

                    var modalBodyInputId = prescriptionModal.querySelector('#presc_patientId');
                    var modalBodyInputName = prescriptionModal.querySelector('#presc_patientName');
                    var modalBodyInputAppt = prescriptionModal.querySelector('#presc_appointmentId');

                    modalBodyInputId.value = patientId;
                    modalBodyInputName.value = patientName;
                    modalBodyInputAppt.value = appointmentId;
                });
            }
        </script>

        <script>
            var el = document.getElementById("wrapper");
            var toggleButton = document.getElementById("menu-toggle");
            if (toggleButton) {
                toggleButton.onclick = function () {
                    el.classList.toggle("toggled");
                };
            }
        </script>
</body>

</html>