<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="d-flex" id="wrapper">
        <%- include('../partials/sidebar') %>

            <div id="page-content-wrapper" class="main-gradient-bg">
                <%- include('../partials/top_utilities') %>

                    <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                        <div class="d-flex align-items-center">
                            <button id="menu-toggle"
                                class="btn btn-light bg-white rounded-circle shadow-sm me-3 d-flex align-items-center justify-content-center"
                                style="width: 45px; height: 45px;">
                                <i class="fas fa-align-left primary-text fs-5"></i>
                            </button>
                            <h2 class="fs-2 m-0 text-dark fw-bold">Search Results</h2>
                        </div>
                    </nav>

                    <div class="container-fluid px-4">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <form action="/admin/search" method="GET"
                                    class="d-flex shadow-sm rounded-pill bg-body overflow-hidden">
                                    <input class="form-control border-0 px-4 py-3 bg-transparent" type="search"
                                        name="query" value="<%= query %>"
                                        placeholder="Search Doctor or Patient by Name or ID..." aria-label="Search">
                                    <button class="btn btn-primary px-4 rounded-pill m-1" type="submit"><i
                                            class="fas fa-search"></i></button>
                                </form>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <h4 class="mb-3">Results for "<%= query %>"</h4>
                                <div class="dash-card p-4 shadow-sm bg-body rounded-4 table-responsive border">
                                    <table class="table table-hover align-middle mb-0">
                                        <thead class="bg-body-secondary">
                                            <tr>
                                                <th
                                                    class="py-3 ps-3 rounded-start text-muted small text-uppercase fw-bold">
                                                    Name</th>
                                                <th class="py-3 text-muted small text-uppercase fw-bold">Role</th>
                                                <th class="py-3 text-muted small text-uppercase fw-bold">Status</th>
                                                <th
                                                    class="py-3 pe-3 rounded-end text-end text-muted small text-uppercase fw-bold">
                                                    Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(users.length> 0) { %>
                                                <% users.forEach(u=> { %>
                                                    <tr>
                                                        <td class="ps-3 fw-bold text-dark">
                                                            <div class="d-flex align-items-center">
                                                                <img src="<%= u.profilePic %>"
                                                                    class="rounded-circle me-2" width="40" height="40"
                                                                    onerror="this.onerror=null;this.src='<%= u.role === 'doctor' ? '/images/doctor-default.png' : '/images/patient-default.png' %>'">
                                                                <div>
                                                                    <span class="d-block">
                                                                        <%= u.fullName %>
                                                                    </span>
                                                                    <small class="text-muted fw-normal">
                                                                        <%= u.email %>
                                                                    </small>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <span
                                                                class="badge <%= u.role === 'doctor' ? 'bg-primary' : 'bg-info' %> bg-opacity-10 text-dark border">
                                                                <%= u.role.charAt(0).toUpperCase() + u.role.slice(1) %>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <% if(u.role==='doctor' ) { %>
                                                                <span
                                                                    class="badge <%= u.verificationStatus === 'verified' ? 'bg-success' : 'bg-warning' %> bg-opacity-10 text-dark border me-1">
                                                                    <%= u.verificationStatus %>
                                                                </span>
                                                                <% } %>
                                                                    <span
                                                                        class="badge <%= u.isBlocked ? 'bg-danger' : 'bg-success' %>">
                                                                        <%= u.isBlocked ? 'Blocked' : 'Active' %>
                                                                    </span>
                                                        </td>
                                                        <td class="text-end pe-3">
                                                            <!-- Block/Unblock Form -->
                                                            <form action="/admin/block" method="POST" class="d-inline">
                                                                <input type="hidden" name="userId" value="<%= u._id %>">
                                                                <% if(u.isBlocked) { %>
                                                                    <button type="submit" name="blockStatus"
                                                                        value="false"
                                                                        class="btn btn-sm btn-outline-success rounded-pill px-3 me-1">
                                                                        <i class="fas fa-unlock small me-1"></i> Unblock
                                                                    </button>
                                                                    <% } else { %>
                                                                        <button type="submit" name="blockStatus"
                                                                            value="true"
                                                                            class="btn btn-sm btn-outline-danger rounded-pill px-3 me-1">
                                                                            <i class="fas fa-ban small me-1"></i> Block
                                                                        </button>
                                                                        <% } %>
                                                            </form>
                                                            <a href="/messages?to=<%= u._id %>"
                                                                class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                                                <i class="fas fa-comment small me-1"></i> Message
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="4" class="text-center text-muted py-5">No
                                                                    users found.</td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
    </div>

    <!-- Sidebar Toggle Script -->
    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>