<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Platform Analytics</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <%- include('../../partials/sidebar') %>

            <div id="page-content-wrapper" class="main-gradient-bg">
                <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                    <div class="d-flex align-items-center">
                        <button id="menu-toggle"
                            class="btn btn-light bg-white rounded-circle shadow-sm me-3 d-flex align-items-center justify-content-center"
                            style="width: 45px; height: 45px;">
                            <i class="fas fa-align-left primary-text fs-5"></i>
                        </button>
                        <h2 class="fs-2 m-0 text-dark fw-bold">Analytics & Insights</h2>
                    </div>
                </nav>

                <div class="container-fluid px-4">
                    <!-- Overview Cards -->
                    <div class="row g-4 mb-4">
                        <div class="col-md-4">
                            <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100 text-center">
                                <h6 class="text-muted text-uppercase fw-bold">Total Users</h6>
                                <h2 class="fw-bold mb-0">
                                    <%= stats.totalPatients + stats.totalDoctors %>
                                </h2>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100 text-center">
                                <h6 class="text-muted text-uppercase fw-bold">Doctors vs Patients</h6>
                                <h2 class="fw-bold mb-0">
                                    <%= stats.totalDoctors %> / <%= stats.totalPatients %>
                                </h2>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100 text-center">
                                <h6 class="text-muted text-uppercase fw-bold">Growth Rate</h6>
                                <h2 class="fw-bold text-success mb-0">+12% <small class="text-muted fs-6">this
                                        month</small></h2>
                            </div>
                        </div>
                    </div>

                    <!-- Charts -->
                    <div class="row g-4 mb-4">
                        <div class="col-lg-8">
                            <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100">
                                <h5 class="fw-bold text-muted mb-4">Platform Growth (6 Months)</h5>
                                <div id="growthChart" style="min-height: 365px;"></div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100">
                                <h5 class="fw-bold text-muted mb-4">User Distribution</h5>
                                <div id="roleChart"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row g-4">
                        <div class="col-lg-12">
                            <div class="dash-card p-4 bg-white shadow-sm rounded-4 h-100">
                                <h5 class="fw-bold text-muted mb-4">Monthly Active Users Trend</h5>
                                <div id="activeChart"></div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
    </div>

    <%- include('../../partials/footer') %>

        <script>
            var el = document.getElementById("wrapper");
            var toggleButton = document.getElementById("menu-toggle");
            if (toggleButton) {
                toggleButton.onclick = function () {
                    el.classList.toggle("toggled");
                };
            }

            // Inject analytics data from server-side
            let analyticsData;
            try {
                analyticsData = <% - analyticsData %>;
                console.log("Analytics Data Success:", analyticsData);
            } catch (e) {
                console.error("Analytics Data Injection Failed:", e);
                analyticsData = { growth: [], roles: [], monthlyActive: [], labels: [] };
            }

            // Base Colors & Theme Support
            const getStyles = () => {
                const isDark = localStorage.getItem('theme') === 'dark';
                return {
                    textColor: isDark ? '#f8f9fa' : '#333333',
                    gridColor: isDark ? '#444444' : '#e5e7eb',
                    baseColors: {
                        primary: '#6366f1',
                        secondary: '#a855f7',
                        success: '#22c55e',
                        info: '#3b82f6',
                        warning: '#f59e0b',
                        danger: '#ef4444'
                    }
                };
            };

            const renderCharts = () => {
                const { textColor, gridColor, baseColors } = getStyles();
                // Ensure data is valid
                const data = analyticsData || { growth: [], roles: [], monthlyActive: [], labels: [] };

                // Common Options
                const commonOptions = {
                    chart: { background: 'transparent', toolbar: { show: false } },
                    dataLabels: { enabled: false },
                    stroke: { curve: 'smooth', width: 3 },
                    legend: { position: 'bottom', labels: { colors: textColor } },
                    labels: { style: { colors: textColor } }
                };

                // --- 1. Growth Chart (Area) ---
                if (window.growthChart) window.growthChart.destroy();
                const growthOptions = {
                    ...commonOptions,
                    series: [{ name: 'Total Users', data: data.growth }],
                    chart: { type: 'area', height: 350, ...commonOptions.chart },
                    xaxis: {
                        categories: data.labels,
                        labels: { style: { colors: textColor } },
                        axisBorder: { color: gridColor }
                    },
                    yaxis: { labels: { style: { colors: textColor } } },
                    colors: [baseColors.primary],
                    fill: {
                        type: 'gradient',
                        gradient: { shadeIntensity: 1, opacityFrom: 0.7, opacityTo: 0.3 }
                    }
                };
                window.growthChart = new ApexCharts(document.querySelector("#growthChart"), growthOptions);
                window.growthChart.render();

                // --- 2. Roles Chart (Donut) ---
                if (window.roleChart) window.roleChart.destroy();
                const roleOptions = {
                    ...commonOptions,
                    series: data.roles,
                    labels: ['Patients', 'Doctors'],
                    chart: { type: 'donut', height: 350, ...commonOptions.chart },
                    colors: [baseColors.info, baseColors.secondary],
                    plotOptions: {
                        pie: {
                            donut: {
                                labels: {
                                    show: true,
                                    total: { show: true, label: 'Total Users', color: textColor },
                                    value: { color: textColor }
                                }
                            }
                        }
                    }
                };
                window.roleChart = new ApexCharts(document.querySelector("#roleChart"), roleOptions);
                window.roleChart.render();

                // --- 3. Active Users (Bar) ---
                if (window.activeChart) window.activeChart.destroy();
                const activeOptions = {
                    ...commonOptions,
                    series: [{ name: 'Active Users', data: data.monthlyActive }],
                    chart: { type: 'bar', height: 350, ...commonOptions.chart },
                    xaxis: {
                        categories: data.labels,
                        labels: { style: { colors: textColor } },
                        axisBorder: { color: gridColor }
                    },
                    yaxis: { labels: { style: { colors: textColor } } },
                    colors: [baseColors.success],
                    plotOptions: {
                        bar: { borderRadius: 4, columnWidth: '50%' }
                    }
                };
                window.activeChart = new ApexCharts(document.querySelector("#activeChart"), activeOptions);
                window.activeChart.render();
            };

            // Initial Render
            renderCharts();

            // Theme Watcher
            const observer = new MutationObserver((mutations) => {
                mutations.forEach((mutation) => {
                    if (mutation.type === 'attributes' && mutation.attributeName === 'data-bs-theme') {
                        renderCharts();
                    }
                });
            });
            observer.observe(document.documentElement, { attributes: true, attributeFilter: ['data-bs-theme'] });
        </script>
</body>

</html>